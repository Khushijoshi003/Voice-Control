{
  "manifest_version": 3,
  "name": "Video Voice Controller",
  "version": "1.0",
  "description": "Control videos using voice commands!",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}